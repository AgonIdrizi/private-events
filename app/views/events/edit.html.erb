<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Update Event</h1>
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title,class: "form-control" %><br>
 
      <%= f.label :description %>
      <%= f.text_area :description,class: "form-control" %><br>

      <%= f.label :location %>
      <%= f.text_field :location,class: "form-control" %><br>

      <%= f.label :date_and_time %><br>
  	
  	  <%= f.datetime_select :date, :ampm => true,
  								 :minute_step =>15,
  								 :start_year => Time.now.year,
  								 :start_month => Time.now.month,
  								 :start_day => Time.now.day ,class: "form-control"
  								  %><br><br>
    
      <%= f.submit 'Update event', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>